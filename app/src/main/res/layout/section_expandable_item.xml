<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/section_exapandable_item_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:id="@+id/section_exapandable_item_imageview" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/section_exapandable_item_imageview"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        tools:text="Item test text"
        android:ellipsize="end"
        android:singleLine="true"
        android:id="@+id/section_exapandable_item_textview" />


</RelativeLayout>
