<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="210dp">

        <ImageView
            android:id="@+id/home_news_item_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/happy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/scrim_bottom"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/home_news_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_news_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:shadowColor="#000"
                    android:shadowRadius="7.0"
                    android:text="This is some random text"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <com.github.curioustechizen.ago.RelativeTimeTextView
                    android:id="@+id/home_news_item_timestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingStart="5dp"
                    android:shadowColor="#000"
                    android:shadowRadius="7.0"
                    android:text="asd"
                    android:textColor="@color/white"
                    app:relative_time_prefix="Completed " />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

